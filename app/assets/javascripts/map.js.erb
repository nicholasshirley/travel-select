$(document).ready(function() {
	$('#benjamin').on ('click', function() {
		$('.hotel-details').fadeOut();
		$(this).children('.hotel-details').fadeIn();
		$('#map').children('img').attr('src', "<%= image_path 'benjamin_map.png' %>");
	})
});

